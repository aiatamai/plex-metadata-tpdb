# ThePornDB API Configuration
TPDB_API_KEY=APIKEY
TPDB_BASE_URL=https://api.theporndb.net
TPDB_RATE_LIMIT=2.0

# Database
DATABASE_URL=sqlite+aiosqlite:///./data/tpdb_provider.db

# Redis (optional - comment out to use in-memory cache)
# REDIS_URL=redis://localhost:6379/0

# Server
PROVIDER_HOST=0.0.0.0
PROVIDER_PORT=8000
DEBUG=false

# Admin Authentication
ADMIN_USERNAME=admin
ADMIN_PASSWORD=password

# Cache TTLs (in seconds)
CACHE_TTL_SITE_LIST=86400
CACHE_TTL_SITE_DETAIL=604800
CACHE_TTL_SCENE_SEARCH=300
CACHE_TTL_SCENE_DETAIL=86400
CACHE_TTL_MOVIE_DETAIL=86400

# Rate Limiting
RATE_LIMIT_DEFAULT=100/minute
RATE_LIMIT_SEARCH=30/minute
